<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Background?>
<?import javafx.scene.layout.BackgroundFill?>
<?import javafx.scene.paint.Color?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.pdfocrexport.com.pdfocrdesktopapp.MainController">

    <!-- Set Background Color -->
    <style>
        -fx-background-color: #f0f0f0;
    </style>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- Content Area -->
    <Label text="Select a PDF file:" style="-fx-font-size: 16px;"/>
    <Button text="Choose PDF" style="-fx-font-size: 14px; -fx-padding: 8px 16px;" onAction="#onSelectPDFButtonClick"/>
    <Label fx:id="selectedPDFLabel" style="-fx-font-size: 14px; -fx-background-color: #ffffff; -fx-padding: 8px; -fx-border-color: #cccccc; -fx-border-width: 1px; -fx-border-radius: 4px;" text="No file selected"/>

    <Label text="Select an output directory:" style="-fx-font-size: 16px;"/>
    <Button text="Choose Directory" style="-fx-font-size: 14px; -fx-padding: 8px 16px;" onAction="#onSelectOutputDirButtonClick"/>
    <Label fx:id="selectedOutputDirLabel" style="-fx-font-size: 14px; -fx-background-color: #ffffff; -fx-padding: 8px; -fx-border-color: #cccccc; -fx-border-width: 1px; -fx-border-radius: 4px;" text="No directory selected"/>

    <Button text="Process" style="-fx-font-size: 14px; -fx-padding: 8px 16px;" onAction="#onProcessButtonClick" fx:id="processButton" disable="true"/>

    <!-- Copyright Notice -->
    <Label text="Â© Saeed Murrad" style="-fx-font-size: 12px; -fx-text-fill: #808080; -fx-alignment: BOTTOM_LEFT; -fx-padding: 10px;"/>
</VBox>
